@using VSporMVC.Models;
@model Roles


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Yeni Ekle</h3>
            </div> <!-- /.card-body -->
            <div class="card-body">
                <div>
                    <section class="content">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-xs-12">
                                <form action="KaydetTanim" method="post">
                                    <div class="box box-info">

                                        <!-- /.box-header -->
                                        <!-- form start -->
                                        <div class="form-horizontal">
                                            <div class="box-body">
                                                <input id="questionSetId" type="hidden" />

                                                <div class="form-group">
                                                    <label for="setType" class="col-sm-2 control-label">Roller</label>

                                                    <div class="col-sm-10">
                                                        <input type="text" class="form-control" id="name" name="name" placeholder="Kategori Adı" required asp-for="Name">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-12">

                                                        <button type="submit" class="btn btn-info pull-right">Kaydet</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                                <div class="box box-danger">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Roller</h3>
                                    </div>
                                    <div class="box-body">
                                        <table id="blogKategoriList" class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Rol</th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @if (Model != null && Model.List != null)
                                                {
                                                    @foreach (var item in Model.List)
                                                    {
                                                        <tr>
                                                            <td>@item.Name </td>
                                                            @*<td><button style="width: 120px;" type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#guncelleModal"><i style="float: left;" class="fa-solid fa-pencil"></i>Güncelle</button> </td>*@

                                                            <!--yeni eklenen-->
                                                    <td><a data-toggle="modal" data-target="#guncelleModal2" title="guncelle" class="btn btn-warning" onclick="Func_Load_Divguncellemodal(@item.Id)">Güncelle</a></td>
                                                    
                                                    <td><a data-toggle="modal" data-target="#silModal2" title="guncelle" class="btn btn-danger" onclick="Func_Load_Divsilmodal(@item.Id)">Sil</a></td>

                                                           @* <td><button style="width:90px" type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#silModal"><i class="fa-solid fa-trash-can"></i> Sil</button></td>*@
                                                        </tr>
                                                    }
                                                }

                                            </tbody>
                                        </table>


                                        <!--yeni eklenen-->
                                        <div id="guncelleModal2" class="modal fade" role="dialog">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title"> </h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="divguncellemodal">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        
                                        <div id="silModal2" class="modal fade" role="dialog">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title"> </h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="divsilmodal">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                     
                                        <!--Güncelle Modal-->

                                       

                            </div>
                        </div>
                    </section>

                </div>
            </div><!-- /.card-body -->
        </div>
    </div><!-- /.container-fluid -->
</section>
<script>

    function Func_Load_Divguncellemodal(id) {
        $.get("/Roles/GuncelleTanimPartialView?Id=" + id, function (res) {
               $(".divguncellemodal").html(res);
        });
    }
    function Func_Load_Divsilmodal(id) {
        $.get("/Roles/SilTanimPartialView?Id=" + id, function (res) {
               $(".divsilmodal").html(res);
        });
    }


</script>